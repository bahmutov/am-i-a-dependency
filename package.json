{
  "name": "am-i-a-dependency",
  "description": "Check if the package is being installed by another package",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/am-i-a-dependency/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/am-i-a-dependency#readme",
  "keywords": [
    "check",
    "npm",
    "postinstall",
    "utility"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/am-i-a-dependency.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.2",
    "chdir-promise": "0.6.2",
    "check-more-types": "2.24.0",
    "dependency-check": "2.10.0",
    "deps-ok": "1.2.2",
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "if-node-version": "1.1.1",
    "lazy-ass": "1.6.0",
    "license-checker": "13.1.0",
    "mocha": "3.5.3",
    "next-update-travis": "1.7.1",
    "nsp": "2.8.1",
    "pre-git": "3.17.0",
    "semantic-release": "^6.3.6",
    "standard": "10.0.3"
  },
  "release": {
    "generateNotes": "github-post-release",
    "analyzeCommits": "simple-commit-message"
  }
}
